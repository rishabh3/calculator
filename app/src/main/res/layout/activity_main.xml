<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="3"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:weightSum="3"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="50dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:id="@+id/t2"
        android:background="@drawable/shape"
        android:layout_weight="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:gravity="right|bottom"
            android:textAlignment="gravity"
            android:id="@+id/t1"
            android:background="@drawable/shape"
            android:layout_weight="1"/>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:orientation="vertical"
    android:layout_weight="0.5"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
            android:id="@+id/btnmod"
            android:text="mod"
            android:textAllCaps="false"
            android:textSize="35dp"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/btnclear"
        android:text="C"
        android:textSize="35dp"
        android:clickable="true"
        android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnexp"
            android:text="exp"
            android:textAllCaps="false"
            android:textSize="35dp"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnpow"
            android:text="pow"
            android:textAllCaps="false"
            android:textSize="35dp"
            android:clickable="true"
            android:background="@drawable/s1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="e"
            android:textAllCaps="false"
            android:textSize="35dp"
            android:id="@+id/btn1"
            android:clickable="true"
            android:background="@drawable/s1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:text="π"
            android:textSize="35dp"
            android:textAllCaps="false"
            android:id="@+id/btn2"
            android:background="@drawable/s1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:text="!"
            android:textAllCaps="false"
            android:textSize="35dp"
            android:id="@+id/btn3"
            android:background="@drawable/s1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35dp"
            android:textAllCaps="false"
            android:id="@+id/btn6"
            android:text="√"
            android:clickable="true"
            android:background="@drawable/s1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ln"
            android:textAllCaps="false"
            android:textSize="35dp"
            android:id="@+id/btn4"
            android:clickable="true"
            android:background="@drawable/s1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="log"
            android:textSize="35dp"
            android:id="@+id/btn5"
            android:clickable="true"
            android:background="@drawable/s1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn9"
            android:text="tan-1"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:clickable="true"
            android:background="@drawable/s1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn8"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:text="cos-1"
            android:clickable="true"
            android:background="@drawable/s1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn10"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:text="sin"
            android:clickable="true"
            android:background="@drawable/s1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn11"
            android:text="cos"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:clickable="true"
            android:background="@drawable/s1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn12"
            android:text="tan"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:clickable="true"
            android:background="@drawable/s1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn7"
            android:text="sin-1"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:clickable="true"
            android:background="@drawable/s1"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/b7"
            android:textSize="25dp"
            android:text="7"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/b8"
            android:textSize="25dp"
            android:text="8"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="25dp"
            android:id="@+id/b9"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="40dp"
            android:id="@+id/bdiv"
            android:clickable="true"
            android:background="@drawable/s1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25dp"
            android:id="@+id/b4"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25dp"
            android:id="@+id/b5"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25dp"
            android:id="@+id/b6"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="X"
            android:textSize="40dp"
            android:id="@+id/bmul"
            android:clickable="true"
            android:background="@drawable/s1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/b1"
            android:textSize="25dp"
            android:text="1"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25dp"
            android:id="@+id/b2"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25dp"
            android:id="@+id/b3"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="45dp"
            android:id="@+id/bminus"
            android:clickable="true"
            android:background="@drawable/s1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25dp"
            android:id="@+id/b0"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="25dp"
            android:id="@+id/bdot"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="25dp"
            android:id="@+id/bequal"
            android:clickable="true"
            android:background="@drawable/s1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="45dp"
            android:id="@+id/badd"
            android:clickable="true"
            android:background="@drawable/s1" />
    </LinearLayout>
</LinearLayout>


</LinearLayout>
